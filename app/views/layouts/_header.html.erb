<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="keywords" content="easylife" />
  <meta name="description" content="" />
  <%= stylesheet_link_tag 'default', 'jquery-ui-1.7.2.custom' %>
  <%= javascript_include_tag "jquery-1.3.2.min", "jquery-ui-1.7.2.custom.min", "jrails", "jquery.form", "application", "common" %>
  <%= include_tiny_mce_if_needed %>

  <%= yield(:lhead) %>
  <%= yield(:head) %>
  <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>

</head>
<body>

<div id="logo-wrap">
  <div id="logo">
    <h1><a href="/">Easylife </a></h1>
    <h2> 简单的个人应用网站</h2>
    <div id='log'>
      <span class="session log_show">
        <%= link_to_remote '注销', :url => sessions_path, :method => :delete %>
      </span>
      <span class="un_session">
        <%= link_to_remote '登录', :url => new_sessions_path, :method => :get %>
        <%= link_to_remote '注册', :url => new_user_path, :method => :get %>
      </span>
    </div>
  </div>
</div>

<!-- start header -->
<div id="header">
  <div id="menu">
    <ul>
      <li class="current_page_item">
        <%= link_to '首页', home_path %>
      </li>
      <li>
        <%= link_to '博客', total_path %>
      </li>
      <li>
        <%= link_to '论坛', forums_path %>
      </li>
      <li>
        <%= link_to '搜索', search_path %>
      </li>
      <li>
        <%= link_to '关于', "/about" %>
      </li>
      <li class="last">
        <%= link_to '联系我们', "/contact" %>
      </li>
    </ul>
  </div>
</div>
<!-- end header -->

<div id="gallery">
  <%= link_to(image_tag(@image.public_filename, :max_width => "600px"), @image.public_filename, :title => @image.info, :class => "NeedLightBox") %>
</div>
<br />
<%= button_to '设为封面？', set_cover_user_cover_image_path %>
<br />

<% form_for(@image, :url=> user_cover_image_path ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :info, '<b>备注</b>' %><br />
    <%= f.text_area :info %>
  </p>
  <p>
    <%= f.submit "更新" %>
    <%= return_to_cover %>
  </p>
<% end %>




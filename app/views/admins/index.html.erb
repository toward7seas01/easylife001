<h1>管理员列表</h1>

<table>
  <tr>
    <th>管理员</th>
    <th>权限</th>
    <th>管理员备注</th>
  </tr>

<% for admin in @admins %>
  <tr>
    <td><%=h admin.name %></td>
    <td><%=h admin.area %></td>
    <td><%=h admin.info %></td>
    <td><%= link_to '查看', admin %></td>
    <td><%= link_to '编辑', edit_admin_path(admin) %></td>
    <td><%= link_to '删除', admin, :confirm => '你确定吗', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


<% content_for(:head) do %>
  <%= javascript_include_tag "jquery.Jcrop.min" %>
  <script type="text/javascript" charset="utf-8">
    $(function() {

      $('#cropbox').Jcrop({
        onChange: update_crop,
        onSelect: update_crop,

        maxSize: [<%= width %>, <%= height %>]
      });
    });

    function update_crop(coords) {
      $("#crop_x").val(coords.x);
      $("#crop_y").val(coords.y);
      $("#crop_w").val(coords.w);
      $("#crop_h").val(coords.h);
    }
  </script>
<% end %>
